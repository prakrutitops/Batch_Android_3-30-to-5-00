<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/k"
    tools:context=".ExtraActivity.RegistrationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="Registration"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/kofi"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/textView"
        android:src="@drawable/ic_person"
        app:civ_border_width="2dp"
        android:pointerIcon="hand"
        app:civ_border_color="@color/kofi"
        android:autofillHints="Select Profile Pic"
        android:tooltipText="Profile Pic"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:textColor="@android:color/white"
        android:hint="Enter Full Name"
        android:id="@+id/l1"
        app:hintTextColor="@android:color/white">
        <EditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/white"
            android:hint="Enter Full Name"
            android:textColorHint="@android:color/white"
            android:textSize="20dp"
            android:background="@color/kofi"></EditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:textColor="@android:color/white"
        android:hint="Enter Email"
        android:id="@+id/l2"
        app:hintTextColor="@android:color/white">
    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/l2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:hint="Enter Email"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        android:background="@color/kofi"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l2"
        android:textColor="@android:color/white"
        android:hint="Enter Password"
        android:id="@+id/l3"

        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@android:color/white"
        app:hintTextColor="@android:color/white">
    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reg_email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/white"
        android:hint="Enter Password"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:background="@color/kofi"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_regi"
        android:layout_below="@id/l3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:background="@drawable/btn_custom"
        android:text="R E G I S T R A C T I O N"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        ></Button>

</RelativeLayout>